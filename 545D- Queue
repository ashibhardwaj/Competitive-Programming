#include <bits/stdc++.h>
using namespace std;

int main() {
	long long n;
	cin>>n;
	vector<long long>t(n);
	for(long long i=0; i<n; i++)
	{
		cin>>t[i];
	}
	sort(t.begin(), t.end());
	long long sum=0, cnt=0;
	for(long long i=0; i<n; i++)
	{
		if(sum<=t[i])
		{
			cnt++;
			sum+=t[i];
		}
	}
	cout<<cnt;
}
